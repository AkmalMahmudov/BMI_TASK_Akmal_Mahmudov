<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="toolbar_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="toolbar_icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="text_large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textColor">@color/color_main</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="default_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:background">@drawable/grey_stroke_8</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:importantForAutofill" tools:targetApi="o">yes</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_grey_18">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">54dp</item>
        <item name="android:fontFamily">@font/raleway_light</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_dark_grey_16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="picker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:theme">@style/Theme.PickerTheme</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>

    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">24dp</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="style_share_ic">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="style_share_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="style_share">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/white_stroke_16</item>
    </style>

</resources>